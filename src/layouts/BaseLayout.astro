---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-gray-50 flex flex-col">
    <header class="bg-blue-900 text-white shadow-lg">
      <div class="container mx-auto px-4 py-4">
        <nav class="flex items-center justify-between flex-wrap">
          <a href={baseUrl} class="text-2xl font-bold hover:text-blue-200 transition-colors mb-2 sm:mb-0">
            MNL Directory
          </a>
          <div id="mainNav" class="flex gap-4 flex-wrap text-sm sm:text-base">
            <a href={`${baseUrl}/find-lawyers/`} class="hover:text-blue-200 transition-colors">Find Lawyers</a>
            <a href={`${baseUrl}/resources/`} class="hover:text-blue-200 transition-colors">Resources</a>
            <a href={`${baseUrl}/add-practice/`} class="hover:text-blue-200 transition-colors">Add Your Practice</a>
            <a href={`${baseUrl}/get-matched/`} class="hover:text-blue-200 transition-colors">Get Matched</a>
            <a href={`${baseUrl}/admin/`} id="adminLink" class="hover:text-blue-200 transition-colors hidden">Admin</a>
            <a href={`${baseUrl}/sign-in/`} id="signInLink" class="hover:text-blue-200 transition-colors">Sign In</a>
            <a href={`${baseUrl}/sign-out/`} id="signOutLink" class="hover:text-blue-200 transition-colors hidden">Sign Out</a>
          </div>
        </nav>
        <p class="text-blue-100 text-sm mt-2">Connecting clients with experienced medical negligence lawyers across Australia.</p>
      </div>
    </header>

    <main class="flex-grow">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white py-12 mt-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">MNL Directory</h3>
            <p class="text-gray-300">
              Connecting clients with experienced medical negligence lawyers across Australia.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2">
              <li><a href={`${baseUrl}/find-lawyers/`} class="text-gray-300 hover:text-white transition-colors">Find Lawyers</a></li>
              <li><a href={`${baseUrl}/add-practice/`} class="text-gray-300 hover:text-white transition-colors">Add Your Practice</a></li>
              <li><a href={`${baseUrl}/get-matched/`} class="text-gray-300 hover:text-white transition-colors">Get Matched</a></li>
              <li><a href={`${baseUrl}/sign-in/`} class="text-gray-300 hover:text-white transition-colors">Sign In</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Legal</h3>
            <ul class="space-y-2">
              <li><a href={`${baseUrl}/privacy/`} class="text-gray-300 hover:text-white transition-colors">Privacy Policy</a></li>
              <li><a href={`${baseUrl}/terms/`} class="text-gray-300 hover:text-white transition-colors">Terms of Service</a></li>
              <li><a href={`${baseUrl}/disclaimer/`} class="text-gray-300 hover:text-white transition-colors">Disclaimer</a></li>
              <li><a href={`${baseUrl}/contact/`} class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-300">
          <p>&copy; {new Date().getFullYear()} Medical Negligence Lawyers Directory. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      import { getCurrentUser } from '../lib/auth';

      // Update navigation based on auth state
      async function updateNav() {
        const user = await getCurrentUser();
        const signInLink = document.getElementById('signInLink');
        const signOutLink = document.getElementById('signOutLink');
        const adminLink = document.getElementById('adminLink');

        if (user) {
          // User is signed in
          signInLink?.classList.add('hidden');
          signOutLink?.classList.remove('hidden');
          adminLink?.classList.remove('hidden');
        } else {
          // User is not signed in
          signInLink?.classList.remove('hidden');
          signOutLink?.classList.add('hidden');
          adminLink?.classList.add('hidden');
        }
      }

      // Run on page load
      updateNav();

      // Listen for auth state changes
      import { supabase } from '../lib/supabase';
      supabase.auth.onAuthStateChange((event, session) => {
        updateNav();
      });
    </script>
  </body>
</html>
