---
import BaseLayout from '../layouts/BaseLayout.astro';
import { supabase } from '../lib/supabase';
import type { Lawyer } from '../lib/types';

const baseUrl = import.meta.env.BASE_URL || '/';

// Fetch all published lawyers
const { data: allLawyers } = await supabase
  .from('lawyers')
  .select('*')
  .eq('is_published', true)
  .order('firm_name', { ascending: true });

// Get unique states for filtering
const { data: statesData } = await supabase
  .from('lawyers')
  .select('state, state_code')
  .eq('is_published', true);

const uniqueStates = Array.from(
  new Map(statesData?.map(s => [s.state_code, s]) || []).values()
).sort((a, b) => a.state.localeCompare(b.state));
---

<BaseLayout
  title="Find Medical Negligence Lawyers - MNL Directory"
  description="Search and browse medical negligence lawyers across Australia. Filter by location to find the right legal professional for your case."
>
  <div class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-12">
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Find Medical Negligence Lawyers</h1>
      <p class="text-xl text-blue-100">Browse lawyers by location or search for specific expertise</p>
    </div>
  </div>

  <div class="container mx-auto px-4 max-w-6xl py-12">
    <!-- Browse by State -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Browse by State</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {uniqueStates.map(state => (
          <a
            href={`${baseUrl}/${state.state_code.toLowerCase()}/`}
            class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-all border border-gray-200 hover:border-blue-500 group"
          >
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
              {state.state}
            </h3>
            <p class="text-sm text-gray-500 mt-1">{state.state_code}</p>
          </a>
        ))}
      </div>
    </section>

    <!-- All Lawyers List -->
    <section>
      <h2 class="text-3xl font-bold text-gray-900 mb-6">All Lawyers</h2>
      {allLawyers && allLawyers.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {allLawyers.map((lawyer: Lawyer) => (
            <article class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow border border-gray-200 p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2">{lawyer.firm_name}</h3>
              <p class="text-gray-600 mb-2">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {lawyer.city}, {lawyer.state_code}
              </p>
              {lawyer.short_description && (
                <p class="text-gray-700 mt-3 mb-4 line-clamp-3">{lawyer.short_description}</p>
              )}
              <div class="space-y-2 mt-4">
                <a
                  href={`${baseUrl}/${lawyer.state_code.toLowerCase()}/${lawyer.city.toLowerCase().replace(/\s+/g, '-')}/${lawyer.slug}/`}
                  class="block bg-blue-600 text-white text-center px-4 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                >
                  View Profile
                </a>
                {lawyer.show_phone_link && lawyer.phone && (
                  <a
                    href={`tel:${lawyer.phone}`}
                    class="block text-blue-600 hover:text-blue-800 font-medium text-sm text-center"
                  >
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    {lawyer.phone}
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <p class="text-gray-600 text-center py-12">No lawyers found.</p>
      )}
    </section>
  </div>
</BaseLayout>
