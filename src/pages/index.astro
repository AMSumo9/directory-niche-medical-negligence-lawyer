---
import BaseLayout from '../layouts/BaseLayout.astro';
import { supabase } from '../lib/supabase';
import type { Lawyer } from '../lib/types';

const baseUrl = import.meta.env.BASE_URL || '/';

// Fetch featured lawyers for homepage
const { data: featuredLawyers } = await supabase
  .from('lawyers')
  .select('*')
  .eq('is_featured', true)
  .eq('is_published', true)
  .order('featured_priority', { ascending: false })
  .limit(6);

// Fetch unique states for browse section
const { data: statesData } = await supabase
  .from('lawyers')
  .select('state, state_code')
  .eq('is_published', true);

const uniqueStates = Array.from(
  new Map(statesData?.map(s => [s.state_code, s]) || []).values()
).sort((a, b) => a.state.localeCompare(b.state));
---

<BaseLayout
  title="Medical Negligence Lawyers Australia - Find Expert Legal Help"
  description="Find experienced medical negligence lawyers across Australia. Connect with qualified legal professionals specializing in medical malpractice, surgical errors, misdiagnosis, and more."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-20">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Find Medical Negligence Lawyers Near You
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100">
          Connect with experienced lawyers across Australia who specialize in medical malpractice cases
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#browse-states"
            class="bg-white text-blue-900 px-8 py-4 rounded-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg"
          >
            Browse by Location
          </a>
          <a
            href={`${baseUrl}about`}
            class="bg-blue-800 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-900 transition-colors shadow-lg"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Lawyers Section -->
  {featuredLawyers && featuredLawyers.length > 0 && (
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Lawyers</h2>
          <p class="text-xl text-gray-600">Top-rated medical negligence specialists</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredLawyers.map((lawyer: Lawyer) => (
            <article class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow border border-gray-200 overflow-hidden">
              <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 px-4 py-2">
                <span class="text-yellow-900 font-bold text-sm flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  FEATURED
                </span>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2">{lawyer.firm_name}</h3>
                <p class="text-gray-600 mb-2">
                  <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {lawyer.city}, {lawyer.state_code}
                </p>
                {lawyer.short_description && (
                  <p class="text-gray-700 mt-3 mb-4">{lawyer.short_description}</p>
                )}
                <div class="space-y-2 mt-4">
                  {lawyer.show_phone_link && lawyer.phone && (
                    <a
                      href={`tel:${lawyer.phone}`}
                      class="block text-blue-600 hover:text-blue-800 font-medium"
                    >
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      {lawyer.phone}
                    </a>
                  )}
                  {lawyer.show_website_link && lawyer.website && (
                    <a
                      href={lawyer.website}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block text-blue-600 hover:text-blue-800 font-medium"
                    >
                      <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                      </svg>
                      Visit Website
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Browse by State Section -->
  <section id="browse-states" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Browse by State</h2>
        <p class="text-xl text-gray-600">Find medical negligence lawyers in your area</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {uniqueStates.map(state => (
          <a
            href={`${baseUrl}${state.state_code.toLowerCase()}/`}
            class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-all border border-gray-200 hover:border-blue-500 group"
          >
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
              {state.state}
            </h3>
            <p class="text-sm text-gray-500 mt-1">{state.state_code}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Why Use Our Directory?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Verified Lawyers</h3>
          <p class="text-gray-600">All lawyers in our directory are verified and licensed professionals</p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Local Expertise</h3>
          <p class="text-gray-600">Find lawyers with local knowledge and experience in your area</p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Free to Use</h3>
          <p class="text-gray-600">Browse and connect with lawyers at no cost to you</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
