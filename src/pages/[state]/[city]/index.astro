  )}

  <!-- Free Listings -->
  {freeLawyers.length > 0 && (
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4 max-w-6xl">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">All Lawyers in {cityName}</h2>

