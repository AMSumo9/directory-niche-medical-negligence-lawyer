---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { supabase } from '../../../lib/supabase';
import type { Lawyer } from '../../../lib/types';

const baseUrl = import.meta.env.BASE_URL || '/';

export async function getStaticPaths() {
  const { data } = await supabase
    .from('lawyers')
    .select('state, state_code, city')
    .eq('is_published', true);

  if (!data) return [];

  const combos = Array.from(
    new Map(data.map(l => [`${l.state_code}-${l.city}`, l])).values()
  );

  return combos.map(l => ({
    params: {
      state: l.state_code.toLowerCase(),
      city: l.city.toLowerCase().replace(/\s+/g, '-')
    },
    props: {
      stateName: l.state,
      cityName: l.city,
      stateCode: l.state_code
    }
  }));
}

const { state, city } = Astro.params;
const { cityName, stateName, stateCode } = Astro.props;

// Fetch all lawyers in this city, sorted by featured status and tier
const { data: lawyers } = await supabase
  .from('lawyers')
  .select('*')
  .eq('state_code', stateCode)
  .eq('city', cityName)
  .eq('is_published', true)
  .order('is_featured', { ascending: false })
  .order('featured_priority', { ascending: false });

// Separate lawyers by tier
const featuredLawyers = lawyers?.filter(l => l.is_featured) || [];
const premiumLawyers = lawyers?.filter(l => !l.is_featured && l.subscription_tier === 'premium') || [];
const freeLawyers = lawyers?.filter(l => !l.is_featured && l.subscription_tier === 'free') || [];
---

<BaseLayout
  title={`Medical Negligence Lawyers ${cityName} - ${stateName} Legal Directory`}
  description={`Find ${lawyers?.length || 0} medical negligence lawyers in ${cityName}, ${stateName}. Connect with experienced legal professionals specializing in medical malpractice cases.`}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16">
    <div class="container mx-auto px-4 max-w-6xl">
      <nav class="text-sm mb-4 text-blue-200">
        <a href={baseUrl} class="hover:text-white">Home</a>
        <span class="mx-2">/</span>
        <a href={`${baseUrl}/${state}/`} class="hover:text-white">{stateName}</a>
        <span class="mx-2">/</span>
        <span class="text-white">{cityName}</span>
      </nav>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Medical Negligence Lawyers in {cityName}
      </h1>
      <p class="text-xl text-blue-100">
        {lawyers?.length || 0} {lawyers?.length === 1 ? 'lawyer' : 'lawyers'} serving {cityName}, {stateName}
      </p>
    </div>
  </section>

  <!-- Featured Lawyers -->
  {featuredLawyers.length > 0 && (
    <section class="py-12 bg-yellow-50">
