                <h3 class="text-2xl font-bold text-gray-900 mb-3">{lawyer.firm_name}</h3>

                {lawyer.address && (
                  <p class="text-gray-700 mb-2 flex items-start">
                    <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
