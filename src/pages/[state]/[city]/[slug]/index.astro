---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { supabase } from '../../../../lib/supabase';
import type { Lawyer } from '../../../../lib/types';

const baseUrl = import.meta.env.BASE_URL || '/';

export async function getStaticPaths() {
  const { data } = await supabase
    .from('lawyers')
    .select('*')
    .eq('is_published', true);

  if (!data) return [];

  return data.map((lawyer: Lawyer) => ({
    params: {
      state: lawyer.state_code.toLowerCase(),
      city: lawyer.city.toLowerCase().replace(/\s+/g, '-'),
      slug: lawyer.slug
    },
    props: { lawyer }
  }));
}

const { state, city, slug } = Astro.params;
const { lawyer } = Astro.props;

const cityName = lawyer.city;
const stateName = lawyer.state;
---

<BaseLayout
  title={`${lawyer.firm_name} - Medical Negligence Lawyers in ${cityName}, ${stateName}`}
  description={lawyer.description || lawyer.short_description || `${lawyer.firm_name} specializes in medical negligence law in ${cityName}, ${stateName}.`}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <nav class="text-sm mb-4 text-blue-200">
        <a href={baseUrl} class="hover:text-white">Home</a>
        <span class="mx-2">/</span>
        <a href={`${baseUrl}/${state}/`} class="hover:text-white">{stateName}</a>
        <span class="mx-2">/</span>
        <a href={`${baseUrl}/${state}/${city}/`} class="hover:text-white">{cityName}</a>
        <span class="mx-2">/</span>
        <span class="text-white">{lawyer.firm_name}</span>
      </nav>

      {lawyer.is_featured && (
        <div class="inline-block bg-yellow-400 text-yellow-900 px-4 py-2 rounded-lg font-bold mb-4">
          <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          FEATURED LISTING
        </div>
      )}

      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        {lawyer.firm_name}
      </h1>
      <p class="text-xl text-blue-100">
        Medical Negligence Lawyers in {cityName}, {stateName}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content Area -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">About {lawyer.firm_name}</h2>

            {lawyer.description && (
              <div class="prose prose-lg max-w-none mb-8">
                <p class="text-gray-700 leading-relaxed">{lawyer.description}</p>
              </div>
            )}

            {!lawyer.description && lawyer.short_description && (
              <div class="prose prose-lg max-w-none mb-8">
                <p class="text-gray-700 leading-relaxed">{lawyer.short_description}</p>
              </div>
            )}

            <div class="mt-8 pt-8 border-t border-gray-200">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">Practice Areas</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Surgical Errors</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Misdiagnosis</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Birth Injuries</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Medication Errors</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Hospital Negligence</span>
                </div>
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-blue-600 mt-1 mr-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">Anesthesia Errors</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-lg p-6 sticky top-4">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Contact Information</h3>

            {lawyer.address && (
              <div class="mb-4">
                <div class="flex items-start text-gray-700">
                  <svg class="w-5 h-5 mr-3 mt-1 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <p class="font-semibold text-gray-900">Address</p>
                    <p class="text-sm">{lawyer.address}</p>
                  </div>
                </div>
              </div>
            )}

            <div class="space-y-3 mt-6">
              {lawyer.show_phone_link && lawyer.phone && (
                <a
                  href={`tel:${lawyer.phone}`}
                  class="block w-full bg-blue-600 text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
                >
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Call {lawyer.phone}
                </a>
              )}

              {lawyer.show_email_link && lawyer.email && (
                <a
                  href={`mailto:${lawyer.email}`}
                  class="block w-full bg-gray-600 text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-colors"
                >
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Send Email
                </a>
              )}

              {lawyer.show_website_link && lawyer.website && (
                <a
                  href={lawyer.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full bg-blue-800 text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-blue-900 transition-colors"
                >
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                  Visit Website
                </a>
              )}

              {!lawyer.show_phone_link && !lawyer.show_email_link && !lawyer.show_website_link && (
                <p class="text-sm text-gray-500 text-center">
                  Contact information available upon request
                </p>
              )}
            </div>

            <div class="mt-6 pt-6 border-t border-gray-200">
              <div class="bg-blue-50 rounded-lg p-4">
                <p class="text-sm text-gray-700">
                  <strong class="text-blue-900">Listing Type:</strong>
                  {lawyer.is_featured && <span class="ml-2 text-yellow-700 font-semibold">Featured</span>}
                  {!lawyer.is_featured && lawyer.subscription_tier === 'premium' && <span class="ml-2 text-blue-700 font-semibold">Premium</span>}
                  {!lawyer.is_featured && lawyer.subscription_tier === 'free' && <span class="ml-2 text-gray-600">Standard</span>}
                </p>
              </div>
            </div>
          </div>

          <!-- Back to City Listings -->
          <div class="mt-6">
            <a
              href={`${baseUrl}/${state}/${city}/`}
              class="block text-center text-blue-600 hover:text-blue-800 font-medium"
            >
              ‚Üê Back to all lawyers in {cityName}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
