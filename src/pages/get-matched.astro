---
import BaseLayout from '../layouts/BaseLayout.astro';

const baseUrl = import.meta.env.BASE_URL || '/';
---

<BaseLayout
  title="Get Matched with a Medical Negligence Lawyer - MNL Directory"
  description="Tell us about your case and we'll connect you with experienced medical negligence lawyers who can help."
>
  <div class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-12">
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Get Matched with a Lawyer</h1>
      <p class="text-xl text-blue-100">Tell us about your case and we'll connect you with the right legal professional</p>
    </div>
  </div>

  <div class="container mx-auto px-4 max-w-4xl py-12">
    <!-- How It Works -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">How It Works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            1
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Share Your Case Details</h3>
          <p class="text-gray-700">Fill out our simple form with information about your situation.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            2
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">We Find Matches</h3>
          <p class="text-gray-700">Our system matches you with qualified lawyers in your area.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            3
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Connect & Consult</h3>
          <p class="text-gray-700">Lawyers will contact you to discuss your case and next steps.</p>
        </div>
      </div>
    </section>

    <!-- Matching Form -->
    <section>
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Tell Us About Your Case</h2>
        <form class="space-y-6">
          <!-- Personal Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Your Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="John"
                />
              </div>

              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Smith"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="john.smith@email.com"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number *</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="(02) 1234 5678"
                />
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
              <div>
                <label for="city" class="block text-sm font-medium text-gray-700 mb-2">City *</label>
                <input
                  type="text"
                  id="city"
                  name="city"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  placeholder="Sydney"
                />
              </div>

              <div>
                <label for="state" class="block text-sm font-medium text-gray-700 mb-2">State *</label>
                <select
                  id="state"
                  name="state"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                >
                  <option value="">Select a state</option>
                  <option value="NSW">New South Wales</option>
                  <option value="VIC">Victoria</option>
                  <option value="QLD">Queensland</option>
                  <option value="WA">Western Australia</option>
                  <option value="SA">South Australia</option>
                  <option value="TAS">Tasmania</option>
                  <option value="ACT">Australian Capital Territory</option>
                  <option value="NT">Northern Territory</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Case Information -->
          <div class="border-t pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Case Details</h3>

            <div class="mb-4">
              <label for="case-type" class="block text-sm font-medium text-gray-700 mb-2">Type of Medical Negligence *</label>
              <select
                id="case-type"
                name="case-type"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select case type</option>
                <option value="misdiagnosis">Misdiagnosis or Delayed Diagnosis</option>
                <option value="surgical">Surgical Error</option>
                <option value="birth-injury">Birth Injury</option>
                <option value="medication">Medication Error</option>
                <option value="anesthesia">Anesthesia Error</option>
                <option value="infection">Hospital-Acquired Infection</option>
                <option value="failure-to-treat">Failure to Treat</option>
                <option value="lack-of-consent">Lack of Informed Consent</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="mb-4">
              <label for="incident-date" class="block text-sm font-medium text-gray-700 mb-2">When did the incident occur? *</label>
              <select
                id="incident-date"
                name="incident-date"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="">Select timeframe</option>
                <option value="less-than-6-months">Less than 6 months ago</option>
                <option value="6-12-months">6-12 months ago</option>
                <option value="1-2-years">1-2 years ago</option>
                <option value="2-3-years">2-3 years ago</option>
                <option value="more-than-3-years">More than 3 years ago</option>
              </select>
            </div>

            <div>
              <label for="case-description" class="block text-sm font-medium text-gray-700 mb-2">Describe what happened *</label>
              <textarea
                id="case-description"
                name="case-description"
                rows="6"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Please provide details about the incident, including what happened, where it occurred, and the impact it has had on you or your loved one. This information helps us match you with the most appropriate lawyer."
              ></textarea>
            </div>
          </div>

          <!-- Additional Questions -->
          <div class="border-t pt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Additional Information</h3>

            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">Have you sought other legal advice about this matter?</label>
              <div class="flex gap-4">
                <label class="flex items-center">
                  <input type="radio" name="prior-legal-advice" value="yes" class="mr-2" />
                  <span class="text-gray-700">Yes</span>
                </label>
                <label class="flex items-center">
                  <input type="radio" name="prior-legal-advice" value="no" class="mr-2" />
                  <span class="text-gray-700">No</span>
                </label>
              </div>
            </div>

            <div class="mb-4">
              <label for="urgency" class="block text-sm font-medium text-gray-700 mb-2">How urgent is your case?</label>
              <select
                id="urgency"
                name="urgency"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
                <option value="urgent">Urgent - need immediate assistance</option>
                <option value="soon">Soon - within the next few weeks</option>
                <option value="flexible">Flexible - just gathering information</option>
              </select>
            </div>

            <div>
              <label for="additional-info" class="block text-sm font-medium text-gray-700 mb-2">Anything else we should know?</label>
              <textarea
                id="additional-info"
                name="additional-info"
                rows="3"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Any other relevant information..."
              ></textarea>
            </div>
          </div>

          <!-- Privacy Notice -->
          <div class="border-t pt-6">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
              <div class="flex">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <div class="text-sm text-blue-900">
                  <p class="font-semibold mb-1">Your privacy is important to us</p>
                  <p>Your information will only be shared with qualified lawyers who can help with your case. We will never sell your information to third parties.</p>
                </div>
              </div>
            </div>

            <div class="flex items-start">
              <input
                type="checkbox"
                id="consent"
                name="consent"
                required
                class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
              />
              <label for="consent" class="ml-2 text-sm text-gray-700">
                I consent to being contacted by medical negligence lawyers regarding my case and agree to the
                <a href={`${baseUrl}/terms/`} class="text-blue-600 hover:text-blue-800">Terms of Service</a> and
                <a href={`${baseUrl}/privacy/`} class="text-blue-600 hover:text-blue-800"> Privacy Policy</a> *
              </label>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors shadow-lg"
          >
            Get Matched with Lawyers
          </button>
        </form>

        <p class="text-sm text-gray-600 mt-6 text-center">
          * Required fields. Matching typically takes 24-48 hours. You will be contacted directly by qualified lawyers.
        </p>
      </div>
    </section>
  </div>
</BaseLayout>
